{
  "consul": "localhost:8500",
  "services": [
    {
      "name": "smartthings",
      "port": {{.PORT}},
      "exec": "node /opt/app/",
      "health": "/opt/app/health.sh",
      "poll": 3,
      "ttl": 30
    },
    {
      "name": "consul-agent",
      "exec": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-log-level=err",
                  "-rejoin",
                  "-retry-join", "{{ if .CONSUL_HOST }}{{ .CONSUL_HOST }}{{ else }}consul{{ end }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }
  ]
}
